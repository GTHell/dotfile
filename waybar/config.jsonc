// -*- mode: jsonc -*-
{
  "layer": "top", // Waybar at top layer
  // "position": "bottom", // Waybar position (top|bottom|left|right)
  // "height": 30, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  // "spacing": 4, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": [
    "custom/launcher",
    "cpu",
    "memory",
    "custom/media",
    "temperature",
    "custom/cava",
    "tray",
  ],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "custom/updates",
    "custom/wallpaper",
    "backlight",
    "pulseaudio",
    "clock",
    "battery",
    "custom/language",
    "custom/power-profiles",
    // "battery#bat2",
    "custom/power",
  ],
  "river/tags": {
    "num-tags": 6,
  },
  // Modules configuration
  "hyprland/window": {
    "max-length": 200,
    "separate-outputs": true,
  },
  "custom/cava": {
    // "exec": "sleep 3 && cava -p ~/.config/cava/config.waybar | sed -u 's/;//g;s/0/0/g;s/1/1/g;s/2/2/g;s/3/3/g;s/4/4/g;s/5/5/g;s/6/6/g;s/7/7/g;s/8/8/g;s/9/9/g;'",
    "exec": "cava -p ~/.config/cava/config.waybar",
  },
  "custom/language": {
    "format": "{} {icon}ÔÜ´ ",
    "format-icons": {
      "us": "ÔÑú ",
      "kh": "ÔÑú ",
    },
    "exec": "setxkbmap -query | awk -F'[: ]+' '/layout:/ {print $2}'",
    "on-click": "bash ~/.config/hypr/scripts/languages",
    "signal": 10,
  },
  "custom/variant": {
    "format": "{} {icon}ÔÜ´ ",
    "format-icons": {
      "us ": "ÔÑú ",
      "kh ": "ÔÑú ",
    },
    "exec": "setxkbmap -query | awk -F'[: ]+' '/variant:/ {print $2}'",
    "on-click": "bash ~/.config/hypr/scripts/languages",
    "signal": 10,
  },
  "hyprland/workspaces": {
    "disable-scroll": false,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}: {icon}",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "format-icons": {
      "1": "ÔÑ° ",
      "2": "ÔäÇ ",
      "3": "Ôíâ ",
      "4": "ÔÜ∂ ",
      "5": "Ôíä ",
      "6": "Óàó ",
      "7": "Ôíã ",
      "8": "Ôíã ",
      "9": "Ôíã ",
      "urgent": "ÔÅ™",
      "focused": "ÔÜí",
      "default": "ÔÑë",
    },
  },
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "ÔÄ£",
      "unlocked": "ÔÇú",
    },
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>",
  },
  "sway/scratchpad": {
    "format": "{icon} {count}",
    "show-empty": false,
    "format-icons": ["", "Ôãí"],
    "tooltip": true,
    "tooltip-format": "{app}: {title}",
  },
  "mpd": {
    "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
    "format-disconnected": "Disconnected ÔÄÅ",
    "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "unknown-tag": "N/A",
    "interval": 5,
    "consume-icons": {
      "on": "ÔÉÑ ",
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ ",
    },
    "repeat-icons": {
      "on": "ÔÄû ",
    },
    "single-icons": {
      "on": "ÔÄû1 ",
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã",
    },
    "tooltip-format": "MPD (connected)",
    "tooltip-format-disconnected": "MPD (disconnected)",
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ",
      "deactivated": "ÔÅ∞",
    },
  },
  "tray": {
    "icon-size": 16,
    "spacing": 10,
  },
  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}",
  },
  "cpu": {
    "interval": 5,
    "format": "{usage}% Ôíº ",
    "tooltip": false,
    "max-length": 10,
  },
  "memory": {
    "interval": 5,
    "format": "{}% Ó∏ô ",
    "max-length": 10,
  },
  "temperature": {
    // "thermal-zone": 2,
    "hwmon-path": "/sys/class/thermal/thermal_zone4/temp",
    "critical-threshold": 95,
    "interval": 1,
    "format-critical": "{temperatureC}¬∞C {icon}",
    "format": "{temperatureC}¬∞C {icon}",
    "format-icons": ["Ôãã", "Ôãâ", "Óº™"],
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{percent}% {icon}",
    "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
  },
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% Ôá¶",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{time} {icon}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
  },
  "battery#bat2": {
    "bat": "BAT2",
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ÔÉß",
      "performance": "ÔÉß",
      "balanced": "Ôâé",
      "power-saver": "ÔÅ¨",
    },
  },
  "network": {
    // "interface": "wlp2*", // (Optional) To force the use of this interface
    "format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
    "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Disconnected ‚ö†",
    "format-alt": "{ifname}: {ipaddr}/{cidr}",
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}Û∞ÇØ {format_source}",
    "format-bluetooth-muted": "Û∞óø {icon}Û∞ÇØ {format_source}",
    "format-muted": "Û∞ùü {format_source}",
    "format-source": "{volume}% Ó∞ú",
    "format-source-muted": "Û∞ç≠",
    "format-icons": {
      "headphone": "ÔÄ• ",
      "hands-free": "ÔÄ• ",
      "headset": "Óπô ",
      "phone": "ÔÇï ",
      "portable": "ÔÇï ",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
    },
    "on-click": "pavucontrol",
  },
  "custom/media": {
    "interval": 30,
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 20,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú",
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null", // Script in resources folder
    "on-click": "playerctl play-pause",
    // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
  },
  "custom/launcher": {
    "format": "ÔåÉ ",
    "on-click": "wofi -show drun",
    "on-click-right": "killall wofi",
  },
  "custom/power-profiles": {
    "format": "{} ÔÉß",
    "format-icons": {
      "Performance": "ÔÉß",
      "balanced": "Ôâé ",
      "power-saver": "ÔÅ¨",
    },
    "exec": "bash ~/.config/hypr/scripts/power-profiles-status",
    "on-click": "bash ~/.config/hypr/scripts/power-profiles",
    "signal": 10,
  },
  "custom/power": {
    "format": "ÔÑ∏ ",
    "on-click": "bash ~/.config/hypr/scripts/powermenu",
  },
  "custom/updates": {
    "format": "{} Update(s)",
    "exec": "checkupdates | wc -l",
    "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
    "interval": 15,
    "on-click": "alacritty -e paru -Syu && notify-send 'The system has been updated' ",
  },
  "custom/wallpaper": {
    "format": "ÔÄæ ",
    "on-click": "bash ~/.config/system_scripts/pkill_bc",
  },
}
